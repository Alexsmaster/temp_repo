{
    // Настройка менеджера проектов
    "projectManager.groupList": true, // Группировать проекты
    "projectManager.sortList": "Name", // Сортировка проектов
    "projectManager.cacheProjectsBetweenSessions": true, // Нужно ли кэшировать проекты между сессиями
    "projectManager.checkInvalidPathsBeforeListing": true, // Проверка недопустимости путей перед выводом списка
    "projectManager.confirmSwitchOnActiveWindow": "never", // Спрашивать разрешение при открытии проекто в активном окне
    "projectManager.filterOnFullPath": true, // Фильтрация проектов по полному имени
    "projectManager.ignoreProjectsWithinProjects": false, // Игнорировать проекты, найденные в других преоектах
    "projectManager.openInCurrentWindowIfEmpty": "always", // Открывать проект в новом окне
    "projectManager.openInNewWindowWhenClickingInStatusBar": true, // Открывать проект в новом окне при клике в строке состояния
    "projectManager.removeCurrentProjectFromList": true, // Открытый проект скрыт в списке проектов
    "projectManager.showParentFolderInfoOnDuplicates": true, // Отображать родительскую папку в случае одинаковых проектов
    "projectManager.supportSymlinksOnBaseFolders": false, // Символические ссылки на базовую папку с проектами
    "projectManager.vscode.baseFolders": [
        "C:/Users/V/Documents/projects" // Базовая папка для проектов VSCode
    ],
    "projectManager.git.baseFolders": [
        "C:/Users/V/Documents/projects" // Базовая папка для проектов Git
    ],
    "projectManager.hg.baseFolders": [
        "C:/Users/V/Documents/projects" // Базовая папка для проектов Mercurial
    ],
    "projectManager.svn.baseFolders": [
        "C:/Users/V/Documents/projects" // Базовая папка для проектов SVN
    ],

    // Основные настройки
    "security.workspace.trust.untrustedFiles": "open", // Настройка открытия не доверенного файла (сейчас стоит открывать без спроса)
    "files.autoSave": "afterDelay", // Авто сохранение после действия
    "files.encoding": "utf8", // Тема рабочего пространства

    // Настройки структуры папок слева
    "workbench.iconTheme": "material-icon-theme", // Тема иконок в рабочем пространстве
    "material-icon-theme.hidesExplorerArrows": false, // Скрывать значки стрелки у папок
    "material-icon-theme.folders.theme": "specific", // Стиль иконок папок
    "workbench.tree.indent": 10, // Количество отступов для нового уровня вложенности
    "workbench.tree.renderIndentGuides": "always", // Отображать ли линию для одного уровня вложенности
    "workbench.view.alwaysShowHeaderActions": true, // Отображать функционал проводника всегда
    "explorer.confirmDelete": false, // Нужно ли подтверждение удаления
    "explorer.compactFolders": false, // Нужно ли отображать папки компактно
    "explorer.confirmDragAndDrop": false, // Нужно ли подтверждение переименование или перемещения

    // Настройки мини-карты справа
    "editor.minimap.enabled": true, // Включена мини-карта справа или нет
    "editor.minimap.autohide": true, // Скрывается ли мини-карта при наведении
    "editor.minimap.maxColumn": 60, // Ширина колонки мини-карты

    // Настройки редактора
    "editor.fontSize": 13, // Размер шрифта редактора
    "editor.linkedEditing": true, // Встроенная поддержка переименовывания тегов
    "editor.scrollBeyondLastLine": true, // Прокрутка редактора ниже последней строки
    "editor.fontFamily": "Consolas, 'Courier New', monospace", // Семейство шрифтов
    "editor.folding": true, // Включено ли сворачивание блоков кода
    "editor.useTabStops": true, // Вставка и удаление пробелов после позиции табуляции

    // Авто дополнение путей
    "path-intellisense.showHiddenFiles": true, // Показать скрытые файлы
    "path-intellisense.absolutePathToWorkspace": false, // Устанавливает абсолютный путь к текущей рабочей области
    "path-intellisense.showOnAbsoluteSlash": true, // Показывает предложения, когда импорт начинается с косой черты ('/')
    "path-intellisense.autoTriggerNextSuggestion": true, //Автоматически запускает следующее предложение после предыдущего предложения
    "path-autocomplete.triggerOutsideStrings": true, // Включает авто дополнение пути вне строк.

    // Настройка терминала
    "terminal.external.windowsExec": "C:/ProgramData/Microsoft/Windows/Start Menu/Programs/PowerShell/PowerShell 7 (x64).lnk", // Путь до терминала
    "terminal.integrated.fontSize": 13.5, // Значение размера шрифта в терминале
    "terminal.integrated.lineHeight": 1.2, // Высота строки терминала
    "terminal.integrated.cursorStyle": "line", // Определяет стиль курсора
    "terminal.integrated.cursorBlinking": true, // Определяет мигает ли курсор
    "terminal.integrated.tabs.enabled": true, // Отображается ли список открытых терминалов
    "terminal.integrated.persistentSessionScrollback": 0, // Определяет сколько строк будет восстановлено
    "terminal.integrated.enablePersistentSessions": false, // Сохранять сеансы в терминале
    "terminal.integrated.suggest.enabled": false, // Авто продолжение команд в терминале
    "terminal.integrated.gpuAcceleration": "on", // Отрисовка в терминале
    "terminal.integrated.splitCwd": "initial", // Новый терминал открывается в той же папке, что и родительский
    "terminal.integrated.drawBoldTextInBrightColors": true, // Жирный текст выделяется цветом

    // Настройки Python
    "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe", // Интерпретатор по умолчанию
    "python.terminal.activateEnvironment": true, // Активировать виртуальное окружение, если оно есть в папке
    "python.analysis.autoImportCompletions": true, // Авто завершение импортов
    "python.analysis.importFormat": "absolute", // Формат импорта
    "python.analysis.autoSearchPaths": true, // Автоматически добавляет пути для поиска модулей Python на основе структуры проекта и PYTHONPATH
    "python.analysis.autoIndent": true, // Автоматическая корректировка отступов
    "python.analysis.indexing": true, // Индексация установленных сторонних библиотек
    "python.analysis.autoFormatStrings": true, // При вводе "{" в строку автоматически добавляется "f" в начало строки
    "debugpy.debugJustMyCode": true, // При дебаггинге обходить только написанный код
    "python.languageServer": "Pylance", // Сервер для рефакторинга по умолчанию
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter", // Форматтер по умолчанию
        "editor.formatOnSave": true, // Форматирование файла при сохранении
        "editor.rulers": [120], // Линия на 120-м символе строки
        "editor.codeActionsOnSave": {
            // Код выполняемый при сохранении
            "source.organizeImports": "explicit" // Запускать организацию испортов при явном сохранении
        }
    },
    "isort.args": [
        "--profile",
        "black",
        "--lines-after-imports",
        "2" // задаём количество отступов после импортов
    ],
    "black-formatter.args": [
        "--line-length=120" // Макс. длина строки 120 символов
    ],

    // Настройки JSON
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", // Форматтер по умолчанию для JSON
        "editor.rulers": [120],
        "prettier.tabWidth": 4
    },

    // Настройки JSON
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", // Форматтер по умолчанию для JSON
        "editor.rulers": [120],
        "prettier.tabWidth": 4
    },

    // Настройки JSON
    "[jsonl]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", // Форматтер по умолчанию для JSON
        "editor.rulers": [120],
        "prettier.tabWidth": 4
    },

    // Настройки Git
    "git.decorations.enabled": true,

    // Настройки Markdown файлов
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint" // Форматтер по умолчанию для Markdown
    },
    "markdownlint.config": {
        "MD046": {
            "style": "fenced"
        }
    },

    // Настройки Docker
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker" // Форматтер по умолчанию для docker-compose
    },

    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker" // Форматтер по умолчанию для Dockerfile
    },

    // Настройки CSS
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // Форматтер по умолчанию для CSS
    },

    // Настройки HTML
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", // Форматтер по умолчанию для HTML
        "editor.rulers": [120],
        "prettier.tabWidth": 2,
        "prettier.printWidth": 120
    },

    // Настройки Django-HTML
    "[django-html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.rulers": [120],
        "prettier.tabWidth": 2,
        "prettier.printWidth": 120,
        "editor.formatOnSave": true
    },

    "emmet.includeLanguages": {
        "django-html": "html"
    },
    "djlint.showInstallError": false,

    // Настройки JavaScript
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Настройки SQL
    "[sql]": {
        "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode" // Форматтер по умолчанию для SQL
    },
    "Prettier-SQL.keywordCase": "upper", // Печатать ключевые слова
    "Prettier-SQL.indentStyle": "standard", // Переключение между стандартным позиционированием ключевых слов и сохранением центрального столбца пространства
    "Prettier-SQL.logicalOperatorNewline": "before", // Разрывать до или после AND и OR
    "Prettier-SQL.tabulateAlias": false, // Выравнивать ли псевдонимы по правой стороне самой длинной строки в предложении SELECT
    "Prettier-SQL.commaPosition": "after", // Где ставить запятые для предложений SELECT и GROUP BY
    "Prettier-SQL.expressionWidth": 70, // Допустимое количество символов в каждой строке до разрыва
    "Prettier-SQL.linesBetweenQueries": 2, // Сколько новых строк следует размещать между каждым запросом/оператором
    "Prettier-SQL.denseOperators": false, // Следует ли удалять пробелы вокруг таких операторов, как + или >=
    "Prettier-SQL.newlineBeforeSemicolon": false, // Ставить ли точку с запятой на отдельной строке или на предыдущей строке

    //
    // Здесь будет добавляться новое
    "workbench.editorAssociations": {
        "*.sqlite3": "default",
        "*.xlsx": "cweijan.officeViewer",
        "{git,gitlens}:/**/*.{md,csv,svg}": "default"
    },
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    "vscode-office.openOutline": true
}
